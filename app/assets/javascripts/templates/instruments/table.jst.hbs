{{#with instrument}}
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Grouping</th>
        <th>Color</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each metrics}}
        <tr>
          <td>{{name}}</td>
          <td>Average</td>
          <td>
            <span class="color" data-metric-name="{{name}}" data-color-format="hex" data-color="{{color}}" style="background-color: {{color}};"></span>
          </td>
          <td>
            <button class="btn btn-warning btn-mini remove-metric" data-metric-name="{{name}}"><i class="icon-trash"></i></button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{/with}}