{{#with instrument}}
  <div class="row-fluid">
    <div class="span12">
      <div id="instrument-detail-header"></div>

      <div class="btn-toolbar">
        <div class="btn-group data-time">
          <button class="btn time" data-time="minute">Minute</button>
          <button class="btn time" data-time="hour">Hour</button>
          <button class="btn time" data-time="day">Day</button>
          <button class="btn time" data-time="week">Week</button>
        </div>

        <div class="btn-group">
          <button class="btn add-metric">Add Metric</button>
        </div> 

        <div class="btn-group">
          <button class="btn instrument-delete" data-instrument-id="{{id}}"><i class="icon-trash"></i></button>
        </div> 
      </div>

      </br>
      
      <div id="instrument-graph-container"></div>
      <div id="instrument-table-container"></div>
    </div>
  </div>
{{/with}}

<div id="metrics-chooser"></div>