<div class="modal" id="dashboard-details-modal">
  <div class="modal-header">
    <h3>Line Graph</h3>
  </div>
  <div class="modal-body">
      <form id="line-graph" class="form-horizontal">
        <fieldset>
          <div class="control-group">
            <label class="control-label">Title</label>
            <div class="controls">
              <input name="line-graph[name]" class="name" type="text" placeholder="Enter widget name">
            </div>
          </div>

          <div class="control-group">
            <label class="control-label">Size</label>
            <div class="controls">
              <select name="line-graph[size]" class="size">
                <option>1</option>
                <option>2</option>
                <option>3</option>
              </select>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label">Time</label>
            <div class="controls">
              <select name="line-graph[time]" class="size">
                <option>minute</option>
                <option>hour</option>
                <option>day</option>
                <option>week</option>
              </select>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label">Update Interval</label>
            <div class="controls">
              <select name="line-graph[update_interval]" class="update-interval">
                <option value="10">10 sec</option>
                <option value="600">1 min</option>
                <option value="6000">10 min</option>
                <option value="3600">1 hour</option>
              </select>
            </div>
          </div>

          <!--
          <div class="control-group">
            <label class="control-label">Data Source</label>
            <div class="controls">
              <select>
                <option>Simple Metrics</option>
                <option>Graphite</option>
              </select>
            </div>
          </div>
          -->

          <div class="control-group">
            <label class="control-label">Targets</label>
            <div class="controls">
              <input name="line-graph[targets]" class="targets" size="16" type="text" style="width:300px">
              <p class="help-block">Comma separated metric names. Including wildcard support (example: test.system1, test.graph.*)</p>
            </div>

          </div>
        </fieldset>
      </form>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Cancel</a>
    <a href="#" class="btn btn-primary">Save</a>
  </div>
</div>
