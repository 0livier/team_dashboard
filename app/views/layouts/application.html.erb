  <body>

    <div class="navbar navbar-fixed-top">
     <div class="navbar-inner">
       <div class="container">
         <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
           <span class="icon-bar"></span>
           <span class="icon-bar"></span>
           <span class="icon-bar"></span>
         </a>
         <a class="brand" href="/">SimpleMetrics</a>
         <div class="nav-collapse">
           <ul class="nav">
             <li class="active"><a href="#" data-navigation-url="/metrics">Metrics</a></li>
             <li><a href="#" data-navigation-url="/instruments">Instruments</a></li>
             <li><a href="#" data-navigation-url="/dashboards">Dashboards</a></li>
             <li><a href="#" data-navigation-url="/about">About</a></li>
           </ul>
         </div><!--/.nav-collapse -->
       </div>
     </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div id="main" class="span12">
        	<%= yield %>
        </div>
      </div>
    </div>
    
  </body>

</html>